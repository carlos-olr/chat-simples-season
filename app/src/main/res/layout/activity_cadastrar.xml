<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.activity.login.CadastrarActivity"
    android:layout_margin="10dp"
    android:id="@+id/cadastrar_layout">

    <TextView
        android:id="@+id/cadastrar_txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="73dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/cadastrar_txt_login"
        android:layout_alignParentStart="true"
        android:id="@+id/cadastrar_edit_login"/>

    <TextView
        android:id="@+id/cadastrar_txt_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cadastrar_edit_login"
        android:layout_alignParentStart="true"
        android:text="Senha"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="73dp" />

    <EditText
        android:id="@+id/cadastrar_edit_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cadastrar_txt_senha"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:text="Confirmar Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cadastrar_txt_confirmar_senha"
        android:textSize="25dp"
        android:layout_below="@+id/cadastrar_edit_senha"
        android:layout_alignParentStart="true"/>
    <EditText
        android:id="@+id/cadastrar_edit_confirmar_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/cadastrar_txt_confirmar_senha"
        android:layout_alignParentStart="true"/>

    <Button
        android:onClick="cadastrar"
        android:text="Cadastrar"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/cadastrar_edit_confirmar_senha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/cadastro_cadastrarBtn"
        android:textAppearance="@android:style/TextAppearance"
        />

</RelativeLayout>
