<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/holder_conversa_txt_login"
        android:text="Algum Login"
        android:textSize="22sp"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/holder_conversa_txt_ultimaMensagem"
        android:text="01/01/2019 00:00"
        android:textSize="17sp"
        android:textColor="#292828"
        android:layout_marginTop="2dp"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/holder_conversa_txt_login"
        />

</androidx.constraintlayout.widget.ConstraintLayout>